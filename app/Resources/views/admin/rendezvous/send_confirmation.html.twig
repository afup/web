{% extends 'admin/base_with_header.html.twig' %}

{% block content %}
    <h2>Envoyer les convocations pour un rendez-vous</h2>
    {{ form_start(form) }}
    <div class="ui segment">
        <h2 class="ui header">Message pour la demande de confirmation du prochain rendez-vous</h2>
        <div class="ui clearing divider"></div>
        <div class="ui form">
            {{ form_row(form.subject) }}
            {{ form_row(form.body) }}
        </div>
    </div>

    <div class="ui segment">
        <div class="ui form">
            {{ form_row(form.save, {attr: {class: "ui primary button"}}) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
