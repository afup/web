{% extends 'admin/base_with_header.html.twig' %}

{% block content %}
    <h2>Modifier une inscription</h2>
    {{ form_start(form) }}
    <div class="ui segment">
        <h2 class="ui header">Inscription</h2>
        <div class="ui clearing divider"></div>
        <div class="ui form">
            {{ form_row(form.lastname) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.company) }}
            {{ form_row(form.email) }}
            {{ form_row(form.phone) }}
        </div>
    </div>
    <div class="ui segment">
        <h2 class="ui header">Réservé à l'administration</h2>
        <div class="ui clearing divider"></div>
        <div class="ui form">
            {{ form_row(form.presence) }}
            {{ form_row(form.confirmed) }}
        </div>
    </div>
    <div class="ui segment">
        <div class="ui form">
            {{ form_row(form.save, { attr: {class: "ui primary button"}}) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
