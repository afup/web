{% extends 'admin/base_with_header.html.twig' %}

{% block content %}
    <h2>Pr√©parer un rendez-vous</h2>
    {{ form_start(form) }}
    <div class="ui segment">
        <h2 class="ui header">Informations</h2>
        <div class="ui clearing divider"></div>
        <div class="ui form">
            {{ form_row(form.title) }}
            {{ form_row(form.pitch) }}
            {{ form_row(form.theme) }}
        </div>
    </div>
    <div class="ui segment">
        <h2 class="ui header">Organisateur & Horaire</h2>
        <div class="ui clearing divider"></div>
        <div class="ui form">
            {{ form_row(form.officeId) }}
            {{ form_row(form.date) }}
            {{ form_row(form.start) }}
            {{ form_row(form.end) }}
        </div>
    </div>
    <div class="ui segment">
        <h2 class="ui header">Pratique</h2>
        <div class="ui clearing divider"></div>
        <div class="ui form">
            {{ form_row(form.place) }}
            {{ form_row(form.url) }}
            {{ form_row(form.address) }}
            {{ form_row(form.plan) }}
            {{ form_row(form.capacity) }}
        </div>
    </div>
    <div class="ui segment">
        <h2 class="ui header">Mode d'inscription</h2>
        <div class="ui clearing divider"></div>
        <div class="ui form">
            {{ form_row(form.registration) }}
            {{ form_row(form.url) }}
            {{ form_row(form.address) }}
            {{ form_row(form.place) }}
            {{ form_row(form.capacity) }}
            {{ form_row(form.externalUrl) }}
        </div>
    </div>
    <div class="ui segment">
        <h2 class="ui header">Slides</h2>
        <div class="ui clearing divider"></div>
        <div class="ui form">
            <p>Fichier ou url (ex : slide share)</p>
            {% for i, slide in [
                [form.slide1Url, form.slide1],
                [form.slide2Url, form.slide2],
                [form.slide3Url, form.slide3],
                [form.slide4Url, form.slide4],
            ] %}
                {{ form_row(slide[0]) }}
                {% if existingSlides[i]|default(null) %}
                    <p>
                        <a href="/templates/rendezvous/slides/{{ existingSlides[i] }}" target="_blank">{{ existingSlides[i] }}</a>
                    </p>
                {% endif %}
                {{ form_row(slide[1]) }}
            {% endfor %}
        </div>
    </div>
    <div class="ui segment">
        <div class="ui form">
            {{ form_row(form.save, { attr: {class: "ui primary button"}}) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
