{% extends 'admin/base_with_header.html.twig' %}

{% form_theme form 'form_theme_admin.html.twig' %}

{% block content %}

    <h2>{{ formTitle }}</h2>

    {{ form_start(form) }}

    <div class="ui segment">
            {% if subTitle == true  %}
                <h3>{{ subTitle }}</h3>
            {% endif %}
        <h2 class="ui header">feuille</h2>
        <div class="ui clearing divider"></div>
        <div class="ui form">
            {{ form_row(form.idParent) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.lien) }}
            {{ form_row(form.alt) }}
            {{ form_row(form.image) }}
            {% if image  %}
                <span>Actuellement : {{ image }}</span>
                <img src="{{ image }}" >
            {% endif %}
            {{ form_row(form.date) }}
            {{ form_row(form.position) }} 
            {{ form_row(form.etat) }}
            {{ form_row(form.patterns) }}
        </div>
        
        <div class="ui segment">
            <div>
                <div class="ui form">
                    <div class="inline fields ui grid">
                        <div class="three wide column">                            
                        </div>
                        <div class="three wide column">
                            <input type="submit" value="{{ submitLabel }}" class="ui primary button">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui segment">
                <p>
                    <span class="obligatoire">*</span> indique un champ obligatoire
                </p>
        </div>

    {{ form_end(form) }}

{% endblock %}
