{% extends ':admin:base_with_header.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/forms_company.css') }}" media="all"/>
{% endblock %}
{% block content %}
    <h2>Badges</h2>

    <div class="ui menu">
        <a href="{{ path('admin_members_badges_new') }}" class="item">
            <div data-tooltip="Ajouter un badge" data-position="bottom left">
                <i class="icon plus square"></i>
                Ajouter
            </div>
        </a>
    </div>

    <table class="ui table striped compact celled">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Logo</th>
                <th>Membres</th>
            </tr>
        </thead>
        <tbody>
        {% for info in infos %}
            <tr>
                <td>{{ info.badge.label }}</td>
                <td>
                    <img src="{{ path('badge_image', {id: info.badge.id })}}" style="max-height: 150px">
                </td>
                <td class="top aligned content">
                    <div class="ui list">
                    {% for user in info.users %}
                        <div class="item">
                            <i class="user icon"></i>
                            <div class="content">
                                <a href="{{ path('admin_members_user_edit', {id: user.id}) }}">
                                {{ user.getLabel }}
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
