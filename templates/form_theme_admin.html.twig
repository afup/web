{% use 'form_div_layout.html.twig' %}

{%- block form_label -%}
    <div class="three wide column right aligned">
        {{ parent() }}
        {% if required == true %}<span class="obligatoire">*</span>{% endif %}
    </div>
{%- endblock form_label -%}

{%- block form_row -%}
    <div class="inline fields ui grid">
        {{ form_label(form) }}
        <div class="field nine wide column">
            <div class="ui input">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
            </div>
        </div>
    </div>
{%- endblock form_row -%}

{%- block checkbox_widget -%}
    <div class="ui checkbox">
        {{ parent() }}
    </div>
{%- endblock checkbox_widget -%}

{% block choice_widget_expanded -%}
    {%- set attr = row_attr|merge({class: row_attr.class|default('') }) -%}
    <div{% with {attr: attr} %}{{ block('attributes') }}{% endwith %}>
        {% for child in form %}
            <div class="field">
                <div class="ui radio checkbox">
                    {{- form_widget(child) -}}
                    <label>{{ child.vars.label }}</label>
                </div>
            </div>
        {% endfor %}
    </div>
{%- endblock choice_widget_expanded %}

{%- block datetime_widget -%}
    {% if widget == 'single_text' %}
        {{- block('form_widget_simple') -}}
    {%- else -%}
        {% set attr = attr|merge({'class': "inline fields"}) %}
        <div {{ block('widget_container_attributes') }}>
            {{- form_errors(form.date) -}}
            {{- form_errors(form.time) -}}
            {{- form_widget(form.date, {attr: {class: 'inline fields'}}) -}}
            {{- form_widget(form.time, {attr: {class: 'inline fields'}}) -}}
        </div>
    {%- endif -%}
{%- endblock datetime_widget -%}

{%- block textarea_widget -%}
    <div style="width: 100%">
        {{ parent() }}
    </div>
{%- endblock textarea_widget -%}
