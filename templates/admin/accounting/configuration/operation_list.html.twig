{% extends 'admin/base_with_header.html.twig' %}

{% block content %}

    <h2>Configuration</h2>

    {% include 'admin/accounting/configuration/_account_menu.html.twig' %}

    <div class="ui bottom attached segment">
        <div class="ui menu">
            <a href="{{ url('admin_accounting_operations_add') }}" class="item">
                <div data-tooltip="Ajouter une opération" data-position="bottom left">
                    <i class="icon plus square"></i>
                    Ajouter
                </div>
            </a>
        </div>

        <table class="ui table striped compact celled">
            <thead>
            <tr>
                <th>Opérations</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% if operations|length > 0 %}
                {% for operation in operations %}
                <tr>
                    <td>{{ operation.name }}</td>
                    <td style="text-align: right">
                        <a href="{{ url('admin_accounting_operations_edit', {id: operation.id}) }}"
                           data-position="left center"
                           data-tooltip="Modifier la ligne {{ operation.name }}"
                           class="compact ui icon button"
                        >
                            <i class="pencil alernate icon"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td><em>Aucune opération actuellement</em></td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>

{% endblock %}
