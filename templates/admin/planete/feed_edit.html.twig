{% extends 'admin/base_with_header.html.twig' %}

{% form_theme form 'form_theme_admin.html.twig' %}

{% block content %}
    <h2>Modifier un flux</h2>
    <div class="ui segment">
        {{ form_start(form) }}
        <h2 class="ui header">Informations</h2>
        <div class="ui clearing divider"></div>
        <div>
            <div class="ui form">
                {{ form_row(form.name) }}
                {{ form_row(form.url) }}
                {{ form_row(form.feed) }}
                {{ form_row(form.userId) }}
            </div>
        </div>
        <h2 class="ui header">Param√®tres</h2>
        <div class="ui clearing divider"></div>
        <div>
            <div class="ui form">
                {{ form_row(form.status) }}
                <div class="inline fields ui grid">
                    <div class="three wide column"></div>
                    <div class="field nine wide column">
                        {{ form_row(form.save, {label: 'Modifier', attr: {class: "ui primary button"}}) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
