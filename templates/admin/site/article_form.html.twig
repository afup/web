{% extends 'admin/base_with_header.html.twig' %}

{% form_theme form 'form_theme_admin.html.twig' %}

{% block content %}
    <h2>{{ formTitle }}</h2>

    {% if article.slug != '-' %}
    <div class="ui menu">
        <div class="ui simple dropdown item" tabindex="0">
            <i class="icon linkify"></i>
            <span class="text">Accès rapides</span>
            <i class="dropdown icon"></i>
            <div class="menu hidden" tabindex="-1">
                <a class="item" href="{{ url('news_display', {'code': article.slug}) }}">Voir sur le site</a>
            </div>
        </div>
    </div>
    {% endif %}

    {{ form_start(form) }}

        <div class="ui segment">
            <h2 class="ui header">Article</h2>
            <div class="ui clearing divider"></div>
            <div>
                <div class="ui form">
                    {{ form_row(form.title) }}
                    {{ form_row(form.leadParagraph) }}
                    {{ form_row(form.content) }}
                    {{ form_row(form.contentType) }}
                </div>
            </div>
        </div>

        <div class="ui segment">
            <h2 class="ui header">Méta-données</h2>
            <div class="ui clearing divider"></div>
            <div>
                <div class="ui form">
                    {{ form_row(form.path) }}
                    {{ form_row(form.rubricId) }}
                    {{ form_row(form.authorId) }}
                    {{ form_row(form.publishedAt) }}
                    {{ form_row(form.position) }}
                    {{ form_row(form.state) }}
                    {{ form_row(form.theme) }}
                    {{ form_row(form.eventId) }}
                </div>
            </div>
        </div>
        <div class="ui segment">
            <div>
                <div class="ui form">
                    <div class="inline fields ui grid">
                        <div class="three wide column">                            
                        </div>
                        <div class="three wide column">
                            <input type="submit" value="{{ submitLabel }}" class="ui primary button">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui segment">
                <p>
                    <span class="obligatoire">*</span> indique un champ obligatoire
                </p>
        </div>

    {{ form_end(form) }}

{% endblock %}
