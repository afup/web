{% extends 'admin/base_with_header.html.twig' %}

{% form_theme form 'form_theme_admin.html.twig' %}

{% block content %}
    <h2>{{ title }}</h2>
    <div class="ui segment">
        {{ form_start(form) }}
        <h2 class="ui header">Évènement : {{ event.title }}</h2>
        <p>
            Du {{ event.dateStart|date('d/m/Y H:i') }}, au {{ event.dateEnd|date('d/m/Y H:i') }}
        </p>
        <div class="ui clearing divider"></div>
        <div>
            <div class="ui form">
                {% if form.ticketType is defined %}
                    {{ form_row(form.ticketType) }}
                {% else %}
                    <div class="inline fields ui grid">
                        <div class="three wide column right aligned">
                            Type de ticket
                        </div>
                        <div class="field nine wide column">
                            <div class="ui input">
                                {{ form.vars.value.ticketType.label }}
                            </div>
                        </div>
                    </div>
                {% endif %}
                {{ form_row(form.price) }}
                {{ form_row(form.dateStart) }}
                {{ form_row(form.dateEnd) }}
                {{ form_row(form.description) }}
                {{ form_row(form.maxTickets) }}
            </div>
        </div>
        <div>
            <div class="ui form">
                <div class="inline fields ui grid">
                    <div class="three wide column"></div>
                    <div class="field nine wide column">
                        <button type="submit" class="ui primary button">{{ button_text }}</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
