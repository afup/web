{% extends 'admin/base_with_header.html.twig' %}

{% block content %}
    <div class="ui segment">
        <h2 class="ui header">Modifier l'assemblée générale du {{ form.vars.value.date|date('d/m/Y') }}</h2>
        <div class="ui clearing divider"></div>
        <div>
            {{ form_start(form) }}
            <div class="ui form">
                <div class="field seven wide column">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {attr: {class: "inline fields"} }) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="field wide column inline fields">
                    <a href="{{ path('admin_members_general_meeting', {date: form.vars.value.date|date('U')}) }}"
                       class="ui button">Retour</a>
                    {{ form_row(form.submit, {attr: {class: "ui primary button"}, label: "Enregistrer"}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
