{% extends 'admin/base_with_header.html.twig' %}

{% form_theme form 'form_theme_admin.html.twig' %}

{% block content %}
    <h2>Ajouter un utilisateur GitHub</h2>
    <div class="ui segment">
        <h2 class="ui header">Utilisateur GitHub</h2>
        <div class="ui clearing divider"></div>
        <div>
            {{ form_start(form) }}
            <div class="ui form">
                {{ form_row(form.user) }}
                {{ form_row(form.afupCrew) }}
                <div class="inline fields ui grid">
                    <div class="three wide column"></div>
                    <div class="field nine wide column">
                        {{ form_row(form.save, {attr: {class: "ui primary button"}}) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
