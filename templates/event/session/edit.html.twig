{% extends 'admin/base_with_header.html.twig' %}
{% form_theme form 'form_theme_admin.html.twig' %}

{% block content %}
    <h2>Modifier les horaires d'une session pour le {{ event.title }}</h2>
    <div class="ui segment">

        <div class="ui form">
            <h3>{{ talk.title }}</h3>
            <div>
                {{ talk.abstract|raw }}
            </div>
        </div>

    </div>

    {{ form_start(form) }}
    <div class="ui segment">
        <h2 class="ui header">Planification</h2>
        <div class="ui clearing divider"></div>

        <div class="ui form">
            {{ form_row(form.start) }}
            {{ form_row(form.end) }}
            {{ form_row(form.roomId) }}
        </div>
    </div>
    <div class="ui segment">
        <div>
            <div class="ui form">
                <div class="inline fields ui grid">
                    <div class="four wide column">
                        <p>
                            <span class="obligatoire">*</span> indique un champ obligatoire
                        </p>
                    </div>
                    <div class="three wide column">
                        {{ form_row(form.submit) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
