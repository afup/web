{% extends 'event/base.html.twig' %}

{% block title %}Call For Papers - Afup{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/css/stars.css') }}">
{% endblock %}

{% block header %}
    {% set menu = {
        'main': {'route' : 'event', 'title': 'Appel à conférences'},
        'items': [
            {'title': 'Proposer une conférence', 'route': 'cfp'},
        ]
    } %}
    {% if event is defined and event.getVoteEnabled %}
        {% set menu = {
            'main': menu.main,
            'items': menu.items|merge([{'title': 'Voter pour les conférences', 'route': 'vote_index'}]),
        } %}
    {% endif %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/js/vote.js') }}"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
{% endblock %}
